# Makefile for ExamSystem on Windows (MinGW)

# Compiler and flags
CXX = g++
CXXFLAGS = -std=c++11 -Wall -Iinclude
LDFLAGS = -lfltk -lsqlite3 -lcrypto

# Directories
SRC_DIR = src
INCLUDE_DIR = include
BUILD_DIR = build
DB_DIR = database

# Source files
SOURCES = $(SRC_DIR)/main.cpp \
          $(SRC_DIR)/User.cpp \
          $(SRC_DIR)/Course.cpp \
          $(SRC_DIR)/Question.cpp \
          $(SRC_DIR)/Result.cpp \
          $(SRC_DIR)/Utils.cpp \
          $(SRC_DIR)/DatabaseManager.cpp \
          $(SRC_DIR)/LoginWindow.cpp \
          $(SRC_DIR)/AdminDashboard.cpp \
          $(SRC_DIR)/CourseSelectionWindow.cpp \
          $(SRC_DIR)/InstructionsWindow.cpp \
          $(SRC_DIR)/ExamWindow.cpp \
          $(SRC_DIR)/ResultWindow.cpp

# Object files
OBJECTS = $(SOURCES:$(SRC_DIR)/%.cpp=$(BUILD_DIR)/%.o)

# Executable
TARGET = exam_system.exe

# Default target
all: directories $(TARGET)

# Create build and database directories
directories:
	@if not exist $(BUILD_DIR) mkdir $(BUILD_DIR)
	@if not exist $(DB_DIR) mkdir $(DB_DIR)

# Link all object files into executable
$(TARGET): $(OBJECTS)
	$(CXX) $(OBJECTS) -o $(TARGET) $(LDFLAGS)
	@echo Build complete! Run with: .\$(TARGET)

# Compile .cpp files into .o files
$(BUILD_DIR)/%.o: $(SRC_DIR)/%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean build
clean:
	if exist $(BUILD_DIR) rmdir /s /q $(BUILD_DIR)
	if exist $(TARGET) del $(TARGET)

# Clean everything including database
cleanall: clean
	if exist $(DB_DIR) rmdir /s /q $(DB_DIR)

# Rebuild
rebuild: clean all

# Run
run: all
	.\$(TARGET)

.PHONY: all clean cleanall rebuild run directories